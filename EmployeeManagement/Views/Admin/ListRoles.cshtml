@model IEnumerable<IdentityRole>
@{
    ViewBag.Title = "Roles";
}
<h1>Roles</h1>
@if (Model.Any())
{
    foreach (var item in Model)
    {
        <div class="card md-3">
            <div class="card-header">
                Role Id: @item.Id
            </div>
            <div class="card-body">
                <div class="card-title">
                    @item.Name
                </div>
            </div>
            <div class="card-footer text-center">
                @*<a asp-controller="home" asp-action="details" asp-route-id="@item.RoleName" class="btn btn-primary m-1">View</a>*@
                
                @*<a href="#" class="btn btn-danger m-1">Delete</a>*@
                <form method="post" asp-action="DeleteRole" asp-route-id="@item.Id">
                    <a asp-controller="Admin" asp-action="EditRole" asp-route-id="@item.Id" class="btn btn-primary m-1">Edit</a>
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    }
}
else
{
    <div class="card">
        <div class="card-header">
            <h3>No Roles found</h3>
        </div>
        <div class="card-body">
            <div class="card-title">
                <a class="btn btn-primary" style="width:auto" asp-controller="Admin" asp-action="CreateRole">Create Roles</a>
            </div>
        </div>
    </div>
}
